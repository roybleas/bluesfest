<div class="container">
<h1>
	<%= pluralize(@usercount, 'User') %>
</h1>
<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%=   user.name %>
      ( <%= user.screen_name %> )
      <% if @admin && user.id != current_user.id %>
      <%= link_to "Delete", user, method: :delete,
                                  data: { confirm: "Are you sure you want to delete user #{user.name}?" } %>
      <%= link_to "Reset Password", pwdreset_path(user),
      														data: { confirm: "Reset password for #{user.name}?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
</div>