<div class="container" >
<%= link_to_artist_artistpage(@artist) %>
<% if @artist.nil? %>
	<h2> Unknown Artist</h2>
<% else %>
	<h2><%= @artist.name%> 
			<%= render partial: "shared/bluelink", locals: {artist_code: @artist.linkid}  %>
	</h2>
			<table class="table table-striped">
			<tbody>
				
				 <%= render partial: "artistperformances", locals: { performances: @performances , startdate_minus_one: @startdate_minus_one } %>
				
			</tbody>
		</table>
		<% if logged_in? %>
		<p> <%= add_or_remove(@favourite_artist,@artist) %>
		<%= add_or_remove_caption(@favourite_artist, @artist) %>
		</p>
		<% end %>
<% end %>
</div>
